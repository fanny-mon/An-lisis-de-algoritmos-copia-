package laberinto;

public class MapaLaberinto {

    private Character[][] celdas;
    private int filas;
    private int columnas;

    public MapaLaberinto(int filas, int columnas) {
        this.filas = filas;
        this.columnas = columnas;
        this.celdas = new Character[filas][columnas];
    }

    public void setCelda(int fila, int columna, Character valor) {
        if (fila >= 0 && fila < filas && columna >= 0 && columna < columnas) {
            celdas[fila][columna] = valor;
        }
    }

    public Character getValor(int fila, int columna) {
        if (fila >= 0 && fila < filas && columna >= 0 && columna < columnas) {
            return celdas[fila][columna];
        }
        return null;
    }

    public int getFilas() {
        return filas;
    }

    public int getColumnas() {
        return columnas;
    }

    @Override
    public String toString() {
        StringBuilder sb = new StringBuilder();
        for (int i = 0; i < filas; i++) {
            for (int j = 0; j < columnas; j++) {
                sb.append(celdas[i][j]).append(" ");
            }
            sb.append("\n");
        }
        return sb.toString();
    }
}

